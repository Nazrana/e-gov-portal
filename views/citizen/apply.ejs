<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Apply for Service</title>
  <link href="/css/output.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-white shadow px-6 py-3 flex items-center justify-between relative">
    <!-- Logo -->
    <div class="flex items-center gap-3">
      <img src="/img/e-gov-logo.png" alt="E-Gov Logo" class="h-10">
      <span class="text-xl font-bold text-gray-800">E-Gov Portal</span>
    </div>

    <!-- Nav Links -->
    <nav class="hidden md:flex gap-8 text-gray-700 font-medium absolute left-1/2 transform -translate-x-1/2">
      <a href="/citizen" class="hover:text-[#00bf63] transition">Dashboard</a>
      <a href="/citizen/apply" class="text-[#00bf63] font-semibold">Apply Service</a>
      <a href="/citizen/requests" class="hover:text-[#00bf63] transition">My Requests</a>
    </nav>

    <div class="flex items-center gap-6">

       <!--  Notification -->
      <div class="relative">
        <button id="notifBtn" class="relative">
          <!-- Bell Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" 
               fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor"
               class="w-7 h-7 text-gray-700 hover:text-[#00bf63] transition">
            <path stroke-linecap="round" stroke-linejoin="round" 
                  d="M14.857 17.082a23.848 23.848 0 005.454-1.31A8.967 
                     8.967 0 0118 9.75V9a6 6 0 10-12 0v.75a8.967 
                     8.967 0 01-2.311 6.022c1.733.64 
                     3.56 1.085 5.454 1.31m5.714 0a24.255 
                     24.255 0 01-5.714 0m5.714 0a3 3 0 
                     11-5.714 0" />
          </svg>
          <% if (notifications && notifications.length > 0) { %>
            <span class="absolute -top-1 -right-1 w-3 h-3 bg-red-500 rounded-full"></span>
          <% } %>
        </button>

        <!-- Dropdown -->
        <div id="notifDropdown" 
             class="hidden absolute right-0 mt-2 w-72 bg-white rounded-lg shadow-lg border">
          <ul class="max-h-64 overflow-y-auto divide-y divide-gray-200">
            <% if (!notifications || notifications.length === 0) { %>
              <li class="p-3 text-gray-500 text-sm">No notifications yet.</li>
            <% } %>
            <% notifications.forEach(n => { %>
              <li class="p-3 text-sm <%= n.is_read ? 'bg-gray-50 text-gray-600' : 'bg-[#00bf63]/10 text-gray-900 font-semibold' %>">
                <%= n.message %>
                <small class="block text-xs text-gray-500 mt-1">
                  (<%= new Date(n.created_at).toLocaleString() %>)
                </small>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>

      <!-- Login/Logout -->
      <% if (user) { %>
        <a href="/auth/logout" 
           class="text-gray-700 hover:text-[#00bf63] font-medium transition">
          Logout
        </a>
      <% } else { %>
        <a href="/auth/login" 
           class="text-gray-700 hover:text-[#00bf63] font-medium transition">
          Login
        </a>
      <% } %>
    </div>
  </header>

  <!-- Main -->
  <main class="flex-1 p-6">
    <div class="max-w-2xl mx-auto bg-white rounded-xl shadow p-8">
      <h3 class="text-2xl font-bold text-gray-800 mb-6">Apply for a Service</h3>

      <form method="POST" action="/citizen/apply" enctype="multipart/form-data" class="space-y-5">
        <!-- Select Service -->
        <div>
          <label class="block text-gray-700 mb-1">Select Service</label>
          <select name="service_id" required
                  class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
            <% services.forEach(s => { %>
              <option value="<%= s.id %>"><%= s.dept_name %> - <%= s.name %></option>
            <% }) %>
          </select>
        </div>

        <!-- Description -->
        <div>
          <label class="block text-gray-700 mb-1">Description (optional)</label>
          <textarea name="description"
                    class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition"></textarea>
        </div>

        <!-- Attachment -->
        <div>
          <label class="block text-gray-700 mb-1">Attachment (optional)</label>
          <input type="file" name="attachment"
                 class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
        </div>

        <!-- Buttons -->
        <div class="flex gap-4">
          <button type="submit"
                  class="flex-1 bg-[#00bf63] text-white py-2 rounded-lg font-semibold hover:bg-green-600 transition">
            Submit Request
          </button>
          <a href="/citizen"
             class="flex-1 bg-gray-200 text-gray-700 py-2 rounded-lg font-semibold hover:bg-gray-300 transition text-center">
            Cancel
          </a>
        </div>
      </form>
    </div>
  </main>

  <!-- Dropdown Script -->
  <script>
    const notifBtn = document.getElementById("notifBtn");
    const notifDropdown = document.getElementById("notifDropdown");
    notifBtn.addEventListener("click", () => {
      notifDropdown.classList.toggle("hidden");
    });
  </script>
</body>
</html>
