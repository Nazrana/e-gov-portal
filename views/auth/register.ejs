<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="UTF-8">
  <title>Register - E-Gov</title>
  <link href="/css/output.css" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-gray-50 to-gray-200 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-white shadow px-6 py-3 flex items-center justify-start gap-4">
    <!-- Logo -->
    <img src="/img/e-gov-logo.png" alt="E-Gov Logo" class="h-10">
    <!-- Title -->
    <span class="text-xl font-bold text-gray-800">E-Gov Portal</span>
  </header>

  <!-- Main Content -->
<main class="flex flex-1">
    <!-- Right: Form -->
    <div class="w-full md:w-1/2 flex items-center justify-center p-8">
      <div class="bg-white shadow-xl rounded-2xl p-8 w-full max-w-md transition hover:shadow-2xl">
        <h2 class="text-2xl font-bold mb-6 text-gray-800 text-right">Citizen Registration</h2>

        <form method="POST" action="/auth/register" class="space-y-4">
          <div>
            <label class="block text-gray-700 mb-1 text-right">Full Name</label>
            <input type="text" name="name" required
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">Email</label>
            <input type="email" name="email" required
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">National ID (optional)</label>
            <input type="text" name="national_id"
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">Date of Birth (optional)</label>
            <input type="date" name="dob"
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">Contact Info (optional)</label>
            <input type="text" name="contact_info"
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">Password</label>
            <input type="password" name="password" required
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <div>
            <label class="block text-gray-700 mb-1 text-right">Confirm Password</label>
            <input type="password" name="confirm_password" required
                   class="w-full border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63] transition">
          </div>

          <button type="submit"
                  class="w-full bg-[#00bf63] text-white py-2 rounded-lg font-semibold hover:bg-green-600 transition">
            Register
          </button>

          <p class="text-sm text-gray-600 mt-4 text-center">
            Already have an account?
            <a href="/auth/login" class="text-[#00bf63] hover:underline">Login</a>
          </p>
        </form>
      </div>
    </div>

    <!-- Left: Image with text overlay -->
    <div class="hidden md:flex md:w-1/2 relative order-1 overflow-hidden">
      <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-100 z-10 slide">
        <img src="/img/Image1.jpg" alt="Slide 1" class="object-cover w-full h-full">
      </div>
      <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0 z-0 slide">
        <img src="/img/Image2.jpg" alt="Slide 2" class="object-cover w-full h-full">
      </div>
      <div class="absolute inset-0 transition-opacity duration-1000 ease-in-out opacity-0 z-0 slide">
        <img src="/img/Image3.jpg" alt="Slide 3" class="object-cover w-full h-full">
      </div>
    </div>
  </main>
<script>
document.addEventListener("DOMContentLoaded", () => {
  let slides = document.querySelectorAll('.slide');
  let current = 0;

  function showNextSlide() {
    // hide current slide
    slides[current].classList.remove('opacity-100', 'z-10');
    slides[current].classList.add('opacity-0', 'z-0');

    // show next slide
    current = (current + 1) % slides.length;
    slides[current].classList.remove('opacity-0', 'z-0');
    slides[current].classList.add('opacity-100', 'z-10');
  }

  setInterval(showNextSlide, 3000); // change every 3 seconds
});

</script>
<script src="https://cdn.tailwindcss.com"></script>
</body>
</html>
