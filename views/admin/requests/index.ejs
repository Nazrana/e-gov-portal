<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Requests - E-Gov Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-white shadow px-6 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <img src="/img/e-gov-logo.png" alt="E-Gov Logo" class="h-10">
      <span class="text-xl font-bold text-gray-800">E-Gov Admin</span>
    </div>
    <nav class="hidden md:flex gap-8 text-gray-700 font-medium">
      <a href="/admin" class="hover:text-[#00bf63] transition">Dashboard</a>
      <a href="/admin/users" class="hover:text-[#00bf63] transition">Users</a>
      <a href="/admin/departments" class="hover:text-[#00bf63] transition">Departments</a>
      <a href="/admin/services" class="hover:text-[#00bf63] transition">Services</a>
      <a href="/admin/requests" class="hover:text-[#00bf63] transition">Requests</a>
    </nav>
    <div>
      <% if (user) { %>
        <a href="/auth/logout" class="text-gray-700 hover:text-[#00bf63] font-medium">Logout</a>
      <% } else { %>
        <a href="/auth/login" class="text-gray-700 hover:text-[#00bf63] font-medium">Login</a>
      <% } %>
    </div>
  </header>

  <!-- Main -->
  <main class="flex-1 p-6">
    <div class="max-w-6xl mx-auto">
      <div class="bg-white rounded-xl shadow p-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">Requests</h3>

        <!-- Search -->
        <form method="GET" action="/admin/requests" class="flex flex-wrap gap-3 mb-6">
          <input type="text" name="search" value="<%= search %>" placeholder="Search requests..."
                 class="flex-1 border rounded-lg px-4 py-2 focus:outline-none focus:ring-2 focus:ring-[#00bf63]" />
          <button type="submit" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition">
            Search
          </button>
          <% if (search) { %>
            <a href="/admin/requests"
               class="px-4 py-2 border border-gray-400 rounded-lg text-gray-700 hover:bg-gray-100">
              Clear
            </a>
          <% } %>
        </form>

        <!-- Table -->
        <div class="overflow-x-auto">
          <table class="w-full border border-gray-200 rounded-lg overflow-hidden">
            <thead class="bg-gray-100 text-gray-700">
              <tr>
                <th class="px-4 py-2 text-left">No</th>
                <th class="px-4 py-2 text-left">Citizen</th>
                <th class="px-4 py-2 text-left">Service</th>
                <th class="px-4 py-2 text-left">Status</th>
                <th class="px-4 py-2 text-left">Attachment</th>
                <th class="px-4 py-2 text-left">Actions</th>
              </tr>
            </thead>
            <tbody>
              <% if (requests.length === 0) { %>
                <tr>
                  <td colspan="6" class="px-4 py-4 text-center text-gray-500">No requests found</td>
                </tr>
              <% } else { %>
                <% requests.forEach((r, i) => { %>
                  <tr class="border-t hover:bg-gray-50 transition">
                    <td class="px-4 py-2"><%= i+1 %></td>
                    <td class="px-4 py-2"><%= r.citizenname %></td>
                    <td class="px-4 py-2"><%= r.servicename %></td>
                    <td class="px-4 py-2">
                      <span class="px-3 py-1 rounded-full text-sm font-medium 
                        <%= r.status==='approved'?'bg-green-100 text-green-700': 
                            r.status==='rejected'?'bg-red-100 text-red-700':'bg-blue-100 text-blue-700' %>">
                        <%= r.status %>
                      </span>
                    </td>
                    <td class="px-4 py-2">
                      <% if (r.attachment) { %>
                        <a href="/uploads/<%= r.attachment %>" target="_blank" class="text-blue-600 hover:underline">Download</a>
                      <% } else { %>
                        <span class="text-gray-400">-</span>
                      <% } %>
                    </td>
                    <td class="px-4 py-2 flex gap-2">
                      <a href="/admin/requests/<%= r.id %>/edit"
                         class="bg-yellow-400 text-white px-3 py-1 rounded-lg text-sm hover:bg-yellow-500 transition">
                        Edit
                      </a>
                      <form action="/admin/requests/<%= r.id %>?_method=DELETE" method="POST" class="inline">
                        <button class="bg-red-500 text-white px-3 py-1 rounded-lg text-sm hover:bg-red-600 transition">
                          Delete
                        </button>
                      </form>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </main>
</body>
</html>
