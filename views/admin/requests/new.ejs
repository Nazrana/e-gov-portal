<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>New Request - E-Gov Admin</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

<!-- Header -->
  <header class="bg-white shadow px-6 py-3 flex items-center justify-between">
    <div class="flex items-center gap-3">
      <img src="/img/e-gov-logo.png" alt="E-Gov Logo" class="h-10">
      <span class="text-xl font-bold text-gray-800">E-Gov Admin</span>
    </div>
    <nav class="hidden md:flex gap-8 text-gray-700 font-medium">
      <a href="/admin" class="hover:text-[#00bf63] transition">Dashboard</a>
      <a href="/admin/users" class="hover:text-[#00bf63] transition">Users</a>
      <a href="/admin/departments" class="hover:text-[#00bf63] transition">Departments</a>
      <a href="/admin/services" class="hover:text-[#00bf63] transition">Services</a>
      <a href="/admin/requests" class="hover:text-[#00bf63] transition">Requests</a>
    </nav>
    <div>
      <% if (user) { %>
        <a href="/auth/logout" class="text-gray-700 hover:text-[#00bf63] font-medium">Logout</a>
      <% } else { %>
        <a href="/auth/login" class="text-gray-700 hover:text-[#00bf63] font-medium">Login</a>
      <% } %>
    </div>
  </header>
  <main class="flex-1 p-6">
    <div class="max-w-xl mx-auto">
      <div class="bg-white rounded-xl shadow p-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-6">New Request</h3>

        <form action="/admin/requests" method="POST" class="space-y-4">
          <div>
            <label class="block mb-1 text-gray-700 font-medium">Citizen</label>
            <select name="citizenId" required
                    class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#00bf63]">
              <% citizens.forEach(c => { %>
                <option value="<%= c.id %>"><%= c.name %></option>
              <% }) %>
            </select>
          </div>

          <div>
            <label class="block mb-1 text-gray-700 font-medium">Service</label>
            <select name="serviceId" required
                    class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#00bf63]">
              <% services.forEach(s => { %>
                <option value="<%= s.id %>"><%= s.name %></option>
              <% }) %>
            </select>
          </div>

          <div>
            <label class="block mb-1 text-gray-700 font-medium">Status</label>
            <select name="status"
                    class="w-full border rounded-lg px-4 py-2 focus:ring-2 focus:ring-[#00bf63]">
              <option value="in-progress">In Progress</option>
              <option value="approved">Approved</option>
              <option value="rejected">Rejected</option>
            </select>
          </div>

          <div class="flex gap-3">
            <button type="submit"
                    class="bg-[#00bf63] text-white px-6 py-2 rounded-lg font-medium hover:bg-green-600 transition">
              Save
            </button>
            <a href="/admin/requests"
               class="px-6 py-2 border border-gray-400 rounded-lg text-gray-700 hover:bg-gray-100">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </main>
</body>
</html>
