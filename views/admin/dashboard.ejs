<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard - E-Gov</title>
  <link href="/css/output.css" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-50 min-h-screen flex flex-col">

  <!-- Header -->
  <header class="bg-white shadow px-6 py-3 flex items-center justify-between relative">
    <!-- Left: Logo -->
    <div class="flex items-center gap-3">
      <img src="/img/e-gov-logo.png" alt="E-Gov Logo" class="h-10">
      <span class="text-xl font-bold text-gray-800">E-Gov Admin</span>
    </div>

    <!-- Center: Nav Links -->
    <nav class="hidden md:flex gap-8 text-gray-700 font-medium absolute left-1/2 transform -translate-x-1/2">
      <a href="/admin" class="hover:text-[#00bf63] transition">Dashboard</a>
      <a href="/admin/users" class="hover:text-[#00bf63] transition">Users</a>
      <a href="/admin/departments" class="hover:text-[#00bf63] transition">Departments</a>
      <a href="/admin/services" class="hover:text-[#00bf63] transition">Services</a>
      <a href="/admin/requests" class="hover:text-[#00bf63] transition">Requests</a>
    </nav>

    <!-- Right: User Actions -->
    <div class="flex items-center gap-6">
      <% if (user) { %>
        <a href="/auth/logout" class="text-gray-700 hover:text-[#00bf63] font-medium transition">
          Logout
        </a>
      <% } else { %>
        <a href="/auth/login" class="text-gray-700 hover:text-[#00bf63] font-medium transition">
          Login
        </a>
      <% } %>


    </div>
  </header>

  <!-- Main -->
  <main class="flex-1 p-6">
    <div class="max-w-6xl mx-auto">
      <!-- Welcome -->
      <div class="bg-white rounded-xl shadow p-6 mb-6">
        <h3 class="text-2xl font-bold text-gray-800 mb-2">Welcome, <%= user.name %></h3>
        <p class="text-gray-600">You are logged in as <span class="font-semibold text-[#00bf63]">Admin</span>.</p>
      </div>

      <!-- Stats Cards -->
      <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
        <div class="rounded-xl p-6 text-center text-white bg-gradient-to-tr from-green-400 to-green-600 shadow-lg">
          <h6 class="text-gray-100">Users</h6>
          <p class="text-3xl font-bold"><%= stats.users %></p>
        </div>

        <div class="rounded-xl p-6 text-center text-white bg-gradient-to-tr from-blue-400 to-blue-600 shadow-lg">
          <h6 class="text-gray-100">Departments</h6>
          <p class="text-3xl font-bold"><%= stats.departments %></p>
        </div>

        <div class="rounded-xl p-6 text-center text-white bg-gradient-to-tr from-purple-400 to-purple-600 shadow-lg">
          <h6 class="text-gray-100">Services</h6>
          <p class="text-3xl font-bold"><%= stats.services %></p>
        </div>

        <div class="rounded-xl p-6 text-center text-white bg-gradient-to-tr from-pink-400 to-pink-600 shadow-lg">
          <h6 class="text-gray-100">Requests</h6>
          <p class="text-3xl font-bold"><%= stats.requests %></p>
        </div>
      </div>


      <!-- Management Links -->
      <div class="bg-white shadow rounded-xl p-6">
        <h4 class="text-lg font-bold text-gray-800 mb-4">Manage</h4>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <a href="/admin/users" class="block p-4 border rounded-lg hover:bg-[#00bf63]/10 transition font-medium text-gray-700">
            Manage Users
          </a>
          <a href="/admin/departments" class="block p-4 border rounded-lg hover:bg-[#00bf63]/10 transition font-medium text-gray-700">
            Manage Departments
          </a>
          <a href="/admin/services" class="block p-4 border rounded-lg hover:bg-[#00bf63]/10 transition font-medium text-gray-700">
            Manage Services
          </a>
          <a href="/admin/requests" class="block p-4 border rounded-lg hover:bg-[#00bf63]/10 transition font-medium text-gray-700">
            Manage Requests
          </a>
        </div>
      </div>
    </div>
  </main>

  <!-- Script for Dropdown -->
  <script>
    const notifBtn = document.getElementById("notifBtn");
    const notifDropdown = document.getElementById("notifDropdown");
    notifBtn.addEventListener("click", () => {
      notifDropdown.classList.toggle("hidden");
    });
  </script>

</body>
</html>
